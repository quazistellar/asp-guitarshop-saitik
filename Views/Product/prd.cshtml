@model guitarshop.Models.CatalogProd
@{
    ViewBag.Title = Model.NameGuitar;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container">
    <h1>@Model.NameGuitar</h1>
    <div style="display: flex; align-items: center;">
        <div style="width: 200px; margin-right: 10px;">
            <img src="~/image/@Model.GuitarImage" alt="@Model.NameGuitar" style="width: 100%; height: auto; max-width: 200px; max-height: 250px; display: block;">
        </div>
        <div>
            <p>Описание гитары: @Model.GuitarDescription</p>
        </div>
    </div>
    <p>Цена: @Model.GuitarPrice.ToString("C")</p>

    <h2>Отзывы</h2>

    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews)
        {
            @Html.DisplayFor(modelItem => review, "Review")
        }
    }
    else
    {
        <p>Пока нет отзывов об этом товаре.</p>
    }

    @{
        @Html.Partial("CreateReview", new guitarshop.Models.Review(), ViewData)
    }

    @{
        ViewData["IdGuitar"] = Model.IdGuitar;
    }

</div>
