<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GUIZNOTES</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/practa1hz.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        main {
            flex-grow: 1;
            padding-bottom: 10px;
        }

        footer {
            background-color: #C8D5E5;
            width: 100%;
            height: 150px;
            position: relative;
        }

        .user-greeting {
            margin-left: 20px;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .bordered-logo {
            border-radius: 50%;
            border: 2px solid #191970;
        }

        .footer-logo {
            width: 50px;
            margin-bottom: 10px;
        }



    </style>
</head>
<body style="background-color: #FFF0F5;">
    <header class="container-fluid" style="background-color: #483D8B;">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" style="color: white;">
                    <img src="~/image/guiznotes-logo.png" class="bordered-logo" alt="Logo" width="40" height="40" class="d-inline-block align-text-top me-2" /> GUIZNOTES
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Catalog" asp-action="Ctlg">Каталог</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Order" asp-action="Ord">Заказы</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Cart" asp-action="Crt">Корзина</a>
                            </li>
                        }
                        @if (User.IsInRole("Администратор"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="Crd">Guitars CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdUser">Users CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdTypes">Types CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdForm">Forms CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdRole">Roles CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdOrder">Orders CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdCart">Cart CRUD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CRUD" asp-action="CrdPos">Pos CRUD</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Личный кабинет (@User.Identity.Name)
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item" asp-controller="Autorize" asp-action="Cab">Профиль</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-action="LogOut" asp-controller="Autorize" method="post">
                                            <button type="submit" class="dropdown-item btn btn-danger">Выход</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Autorize" asp-action="Cab">Вход</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 margin-top: -20px;">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="footer-left">
                <img src="~/image/logo2.png" alt="Logo" width="40" height="40" class="rounded-circle" style="margin-bottom: 10px;" />
                <p class="footer-phone">+7 (852) 552-52-52</p>
                <p class="footer-phone">+7 (777) 55-78-01</p>
            </div>
            <div class="footer-right">
                <p class="footer-copyright">MPT PRODUCTION OOO GUIZNOTES</p>
                <p class="footer-copyright"> <b>© GUIZNOTES 2024</b></p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
