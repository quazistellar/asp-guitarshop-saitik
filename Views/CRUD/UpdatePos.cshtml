@model guitarshop.Models.PosOrder

@{
    ViewData["Title"] = "Изменить позицию в заказе";
}

<h2>Изменить позицию в заказе</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOrder" />
            <div class="form-group">
                <label asp-for="IdOrder" class="control-label"></label>
                <input asp-for="IdOrder" class="form-control" type="number" />
                <span asp-validation-for="IdOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCatalogProd" class="control-label"></label>
                <input asp-for="IdCatalogProd" class="form-control" type="number" />
                <span asp-validation-for="IdCatalogProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderCount" class="control-label"></label>
                <input asp-for="OrderCount" class="form-control" />
                <span asp-validation-for="OrderCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CrdPos">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
