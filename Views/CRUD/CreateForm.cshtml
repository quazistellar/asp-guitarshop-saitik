@model guitarshop.Models.GuitarForm

@{
    ViewBag.Title = "Добавление формы";
}

<form asp-action="CreateForm" asp-controller="CRUD">
    <div class="form-group">
        <label asp-for="FormName" class="control-label">Название формы</label>
        <input type="text" asp-for="FormName" class="form-control" />
        <span asp-validation-for="FormName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить форму" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
