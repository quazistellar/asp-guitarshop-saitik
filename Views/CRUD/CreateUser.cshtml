@model guitarshop.Models.User

@{
    ViewBag.Title = "Добавление пользователя";
}

<form asp-action="CreateUser" asp-controller="CRUD">
    <div class="form-group">
        <label asp-for="LoginUser" class="control-label">Логин</label>
        <input type="text" asp-for="LoginUser" class="form-control" />
        <span asp-validation-for="LoginUser" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordUser" class="control-label">Пароль</label>
        <input type="password" asp-for="PasswordUser" class="form-control" />
        <span asp-validation-for="PasswordUser" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NameClient" class="control-label">Имя</label>
        <input type="text" asp-for="NameClient" class="form-control" />
        <span asp-validation-for="NameClient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SurnameClient" class="control-label">Фамилия</label>
        <input type="text" asp-for="SurnameClient" class="form-control" />
        <span asp-validation-for="SurnameClient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatronimClient" class="control-label">Отчество</label>
        <input type="text" asp-for="PatronimClient" class="form-control" />
        <span asp-validation-for="PatronimClient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdRole" class="control-label">Роль</label>
        <input type="number" asp-for="IdRole" class="form-control" />
        <span asp-validation-for="IdRole" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить пользователя" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
