@model guitarshop.Models.Role

@{
    ViewBag.Title = "Добавление роли";
}

<form asp-action="CreateRole" asp-controller="CRUD">
    <div class="form-group">
        <label asp-for="RoleName" class="control-label">Название роли</label>
        <input type="text" asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить роль" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
